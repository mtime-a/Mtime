<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_film_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <com.example.mtimeapp.CustomView.RoundImageView
            android:id="@+id/item_film_picture"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dianyingtup" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/item_film_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="惊奇队长"
                        android:textColor="@android:color/black"
                        android:textSize="25dp" />

                    <!--<TextView-->
                    <!--android:id="@+id/item_film_date"-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="right|center"-->
                    <!--android:text="2019-10-12"-->
                    <!--android:textSize="11dp" />-->
                </FrameLayout>

                <TextView
                    android:id="@+id/item_film_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:text="的那份打死放假啊低房价多少的那份打死放假啊低房价多少的那份打死放假啊低房价多少的那份打死放假啊低房价多少"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <com.example.mtimeapp.CustomView.RoundImageView
                        android:id="@+id/item_film_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/dianying" />

                    <TextView
                        android:id="@+id/item_film_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="行者"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/pinglun" />

                    <TextView
                        android:id="@+id/item_film_commentnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15" />
                </LinearLayout>
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>