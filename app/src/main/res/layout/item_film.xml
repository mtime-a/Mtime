<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_film_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="起诉父母的理由，是因为他们剩下自己"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/item_film_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="如果向左滑动position的值等于ViewPager当前下标,如果向右滑动position的值等于View...Android ViewPager 如何判断当前页面是从前一页还是后一页滑动" />

        <com.example.mtimeapp.CustomView.RoundImageView
            android:id="@+id/item_film_picture"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dianyingtup" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <com.example.mtimeapp.CustomView.CircleImageView
                android:id="@+id/item_film_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/kaiyan" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_film_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="行者"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/item_film_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mlj19980926" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/pinglun" />

                <TextView
                    android:id="@+id/item_film_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="20"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>